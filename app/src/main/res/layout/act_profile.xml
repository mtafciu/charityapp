<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_pro_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorLighter"
        android:layout_weight="12">

        <ImageButton
            android:id="@+id/btn_pro_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:src="@null"
            android:background="@color/colorLighter"/>

        <TextView
            android:id="@+id/txt_pro_nav"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Profile"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"/>


        <ImageButton
            android:id="@+id/btn_pro_edit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/edit"
            android:scaleX="0.6"
            android:scaleY="0.5"
            android:background="@color/colorLighter"/>

        <ImageButton
            android:id="@+id/btn_pro_logout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/logout"
            android:scaleY="0.8"
            android:scaleX="0.9"
            android:background="@color/colorLighter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/pro_user_img"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/luka"/>
            <TextView
                android:id="@+id/pro_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Lukas"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:text="100,000 pts"
                android:gravity="center"/>
            <Button
                android:id="@+id/btn_pro_certificate"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:text="My Certificate"
                android:background="@color/colorLight"/>

            <Button
                android:id="@+id/btn_pro_shop"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:text="Convert My Points"
                android:background="@color/colorLight"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:text="Age"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="13sp"
                    android:text="23"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">

                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:text="Location"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="13sp"
                    android:text="Mannheim, Germany"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">

                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:text="Interests"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="13sp"
                    android:text="Animals, Family, Education"/>
            </LinearLayout>


            <Button
                android:id="@+id/btn_pro_his"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:text="History "
                android:background="@color/colorLight"/>

        </LinearLayout>


        <LinearLayout
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/lighterGrey">


            <ImageButton
                android:layout_weight="3"
                android:id="@+id/btn_pro_news"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/news_icon"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:background="@color/lighterGrey"
                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/lightGrey"/>

            <ImageButton
                android:layout_weight="3"
                android:id="@+id/btn_pro_vol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/vol_icon"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:background="@color/lighterGrey"
                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/lightGrey"/>

            <ImageButton
                android:layout_weight="3"
                android:id="@+id/btn_pro_do"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/do_icon"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:background="@color/lighterGrey"
                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/lightGrey"/>

            <ImageButton
                android:layout_weight="3"
                android:id="@+id/btn_pro_pro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/user_icon_red"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:background="@color/lighterGrey"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>