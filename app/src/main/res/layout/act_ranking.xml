<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_rank_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorLighter"
        android:layout_weight="12">

        <ImageButton
            android:id="@+id/btn_rank_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:paddingLeft="20dp"
            android:src="@drawable/back"
            android:background="@color/colorLighter"/>

        <TextView
            android:id="@+id/txt_rank_nav"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Ranking"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/rank_user_img"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/luka"/>
                <TextView
                    android:id="@+id/rank_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Lukas"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/rank_user_pts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:text="100,000 pts"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="@drawable/ll_ranking_border"
                            android:gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/golden_star"
                                android:scaleX="0.6"
                                android:scaleY="0.6"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Tom"
                                android:textStyle="bold"
                                android:textSize="17sp"/>

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="1,000 pts"
                                android:textSize="15sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ll_ranking_border"
                            android:gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/silver_star"
                                android:scaleX="0.6"
                                android:scaleY="0.6"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Anna"
                                android:textStyle="bold"
                                android:textSize="17sp"/>

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="7,6000 pts"
                                android:textSize="15sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ll_ranking_border"
                            android:gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/bronze_star"
                                android:scaleX="0.6"
                                android:scaleY="0.6"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Vanessa"
                                android:textStyle="bold"
                                android:textSize="17sp"/>

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="7,3000 pts"
                                android:textSize="15sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:background="@drawable/ll_ranking_border"
                            android:gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Nr 4"
                                android:textStyle="bold"
                                android:textSize="19sp"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Max"
                                android:textStyle="bold"
                                android:textSize="17sp"/>

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="500 pts"
                                android:textSize="15sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:background="@drawable/ll_ranking_border"
                            android:gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Nr 5"
                                android:textStyle="bold"
                                android:textSize="19sp"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Amy"
                                android:textStyle="bold"
                                android:textSize="17sp"/>

                            <TextView
                                android:id="@+id/txt_rank_amy"
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="340 pts"
                                android:textSize="15sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:background="@drawable/ll_ranking_border"
                            android:gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:layout_marginBottom="30dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Nr 6"
                                android:textStyle="bold"
                                android:textSize="19sp"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Lukas"
                                android:textStyle="bold"
                                android:textSize="17sp"/>

                            <TextView
                                android:id="@+id/txt_rank_lukas"
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="0 pts"
                                android:textSize="15sp"/>

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>